# Plugins
source ~/.zplug/init.zsh

# Fancier vim mode.
zplug "jeffreytse/zsh-vi-mode"

# Powerlevel theme
zplug romkatv/powerlevel10k, as:theme, depth:1

# Bookmarks
zplug "jocelynmallon/zshmarks"

# Syntax highlighting
zplug "zsh-users/zsh-syntax-highlighting", defer:2

# zplug check returns true if all packages are installed
# Therefore, when it returns false, run zplug install
if ! zplug check; then
    zplug install
fi

# source plugins and add commands to the PATH
zplug load

export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# OMZSH
source $ZSH/oh-my-zsh.sh

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

export EDITOR="vim"

# Path Changes
export PATH=$PATH:~/.bin
export PATH=$PATH:~/.local/bin

alias blaze="bazel"

bindkey "^[[A" history-beginning-search-backward
bindkey "^[[B" history-beginning-search-forward

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/jsybrandt/anaconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/jsybrandt/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/home/jsybrandt/anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/jsybrandt/anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

